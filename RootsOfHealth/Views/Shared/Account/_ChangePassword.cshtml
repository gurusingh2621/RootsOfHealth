@model RootsOfHealth.Models.UserBO


<div class="tab-pane fade" id="ChnagePWD" role="tabpanel" aria-labelledby="ChnagePWD-tab">
    
        <div class="appointment" style="padding:0">
                <div class="container-fluid pl-0 pr-0">
                    <div class="paitent-detail-left">
                        <div class="detail-heading d-flex">
                            <h2>Change Password</h2>

                            <div class="detail-button ml-auto">
                                <input type="button" value="Update" onclick="changePassword()" class="btn btn-primary" />
                            </div>
                        </div>
                        <div class="form-horizontal">
                            <div class="row">


                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.Label("Current Password", htmlAttributes: new { @class = "control-label" })
                                        <input class="form-control" id="txtPassword" name="txtPassword" type="password" maxlength = "16" autocomplete="off" readonly="readonly" onclick="makeReadonlyField(this,false)" onfocusout="makeReadonlyField(this,true)" value=""><span toggle="#txtPassword" class="fa fa-fw fa-eye field-icon toggle-password"></span>

                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.Label("New Password", htmlAttributes: new { @class = "control-label" })
                                        <input class="form-control" id="txtPassword1" name="txtPassword1" type="password" maxlength = "16" autocomplete="off" readonly="readonly" onclick="makeReadonlyField(this,false)" onfocusout="makeReadonlyField(this,true)" value="">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.Label("Confirm Password", htmlAttributes: new { @class = "control-label" })
                                        <input class="form-control" id="txtPassword2" name="txtPassword2" type="password" maxlength = "16" autocomplete="off" readonly="readonly" onclick="makeReadonlyField(this,false)" onfocusout="makeReadonlyField(this,true)" value="">

                                    </div>
                                </div>

                            </div>
                        </div>


                    </div>
                </div>
           
        </div>
   
    </div>

