@model RootsOfHealth.Models.ReportsBO

<form id="formAddReport" class="AddReport-form">
    <input id="ReportId" type="hidden" value="@Model.ID" />
    <input id="hdnCategoryId" type="hidden" value="@Model.CategoryId" />
    <div class="form-group d-flex align-items-center">
        <label for="txtReportName" class="m-0 required">Report Name</label>
        <input id="txtReportName" type="text" class="form-control" value="@Model.Name">
    </div>
    <div class="form-group d-flex align-items-center">
        <label for="txtReportLink" class="m-0 required">Report Link</label>
        <input id="txtReportLink" type="text" class="form-control" value="@Model.ReportLink">
    </div>
    <div class="form-group d-flex align-items-center">
        <label for="txtReportDescription" class="m-0">Report Description</label>
        <textarea id="txtReportDescription" type="text" class="form-control" value="@Model.Description"></textarea>
    </div>
    <div class="form-group d-flex align-items-center">
        <label for="ddlReportCategory" class="m-0 required">Report Category</label>
        <select id="ddlReportCategory" class="form-control list-box tri-state" value="@Model.CategoryId">
        </select>
    </div>
</form>

