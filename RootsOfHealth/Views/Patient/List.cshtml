@section scripts {



    <script>
        $(document).ready(function () {

            $.ajax({

                type: "Get",
                url: '/Patient/GetAllPatients',
                dataType: "html",
                contentType: "application/json; charset=utf-8",
                success: function (result) {

                    $('.All-paitents').html(result);
                    $("#tblPatient").dataTable({
                        scrollY: '50vh',
                       scrollCollapse: true,
                        

                    });
                },
                error: function () {
                    toastr.error("Some error occurred!! or data not found");
                },
                complete: function () {


                }
            });
           
        });
        function OpenPatient(id) {
             $('#tblPatient tbody').on('click', 'tr', function () {
                window.location='/DashBoard/Index?patientid='+id;
            });
        }
    </script>

}
